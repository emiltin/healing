#!/usr/bin/env ruby

require 'rubygems'
require 'trollop'
#require File.dirname(__FILE__)+'/../lib/healing'

parser = nil
opts = Trollop::options do
  opt :ideal, "ideal file", :type => :string, :default => 'ideal.rb'
  parser = self
end

h = Healing::App::Admin.new
h.load_ideal opts[:ideal]
h.heal
