#!/usr/bin/env ruby

require 'healing'

addr = "ec2-75-101-173-179.compute-1.amazonaws.com"
uuid = "5bdfg3sdt3"
key = "/Users/emiltin/.ec2/testpair"


#launch node...
#bootstrap node...


#install healing
puts 'installing'
puts `rsync -e 'ssh -i #{key}' -ar /Users/emiltin/Desktop/healing/ root@#{addr}:/healing`

#set cloud uuid
puts 'setting cloud uuid'
puts `ssh -i #{key} root@#{addr} "echo '#{uuid}' > /healing/cloud_uuid"`

#heal the node
puts 'healing'
puts `ssh -i #{key} root@#{addr} "cd /healing && bin/heal"`